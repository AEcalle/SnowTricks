{% if form.vars.value is not null %}
        <div class="item image">
                <div class="col-12 col-lg-3">
                        {{ form_row(form.filename) }}
                        <i class="bi bi-trash-fill remove_image_link"></i>
                </div>
        </div>
{% endif %}
{% if form.file is defined %}
        <div class="item image">
                {{ form_row(form.file) }}
                <i class="bi bi-trash-fill remove_item_link"></i>
        </div>
{% endif %}


